{erl_opts, [warnings_as_errors, {parse_transform, lager_transform}]}.
{cover_enabled, true}.
{cover_print_enabled, true}.

{deps, [
    {lager, ".*", {git, "git://github.com/erlang-lager/lager", {tag, "3.6.1"}}},
    {ranch, ".*", {git, "git://github.com/ninenines/ranch", {tag, "1.5.0"}}},
    {hkdf, ".*", {git, "git://github.com/schnef/hkdf", {branch, "master"}}}
]}.

{profiles, [
    {debug, [
        {erl_opts, [debug_info, {d, 'DEBUG'}]}
    ]},
    {eunit, [
        {erl_opts, [debug_info, {d, 'DEBUG'}, {d, 'EUNIT'}]},
        {eunit_opts, [verbose]}
    ]},
    {prod, [
        {erl_opts, [no_debug_info]}
    ]},
    {native, [
        {erl_opts, [no_debug_info, {native, o3}]}
    ]}
]}.

{relx, [
    {release, {periscope, "0.2.0"}, [periscope], [{include_erts, false}, {extended_start_script, true}]}
]}.
